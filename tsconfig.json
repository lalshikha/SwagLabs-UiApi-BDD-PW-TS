{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["@playwright/test", "node"],
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": false
  },
  "include": ["**/*.ts", "**/*.js","**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
